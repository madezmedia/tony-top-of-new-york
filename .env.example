# T.O.N.Y. Media Asset Management - Environment Variables
# Copy this file to .env.local and fill in your values

# ======================
# GEMINI API (existing)
# ======================
GEMINI_API_KEY=your_gemini_api_key

# ======================
# AWS S3 Configuration
# ======================
# Primary storage for all media assets
VITE_AWS_ACCESS_KEY_ID=your_aws_access_key
VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
VITE_AWS_REGION=us-east-1
VITE_S3_BUCKET=tony-media-assets

# ======================
# Cloudinary Configuration
# ======================
# Image transformations and CDN delivery
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_API_KEY=your_api_key
VITE_CLOUDINARY_API_SECRET=your_api_secret

# ======================
# CDN Configuration
# ======================
# Production CDN URL (CloudFront or Cloudinary)
VITE_CDN_URL=https://cdn.tonyseries.com
VITE_CDN_VERSION=v1

# ======================
# Environment
# ======================
# Set to 'production' to use real CDN URLs instead of placeholders
NODE_ENV=development

# ======================
# MUX Video Streaming
# ======================
# Get these from https://dashboard.mux.com/settings/access-tokens
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret

# Signing key for secure playback (create at Mux Dashboard > Settings > Signing Keys)
MUX_SIGNING_KEY_ID=your_signing_key_id
# Base64 encoded private key (or path to .pem file)
MUX_SIGNING_PRIVATE_KEY=your_base64_encoded_private_key

# ======================
# Square Payments
# ======================
# Get these from https://developer.squareup.com/apps
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_APPLICATION_ID=your_square_application_id

# Webhook signature key (from Square Dashboard > Webhooks)
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key

# Environment: 'sandbox' for testing, 'production' for live
SQUARE_ENVIRONMENT=sandbox

# ======================
# Supabase Database & Auth
# ======================
# Get these from https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key

# Service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ======================
# Application
# ======================
VITE_APP_URL=http://localhost:3000
# Price in cents (e.g., 499 = $4.99)
VITE_FILM_PRICE_CENTS=499

# ======================
# Feature Toggles
# ======================
# Set to 'true' to enable Press Kit section (disabled until assets are ready)
VITE_ENABLE_PRESS_KIT=false
